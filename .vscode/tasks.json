{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run C++",
            "type": "shell",
            "command": "/bin/zsh",
            "args": [
                "-c",
                "/usr/bin/clang++ -std=c++17 \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
